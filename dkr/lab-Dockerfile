FROM jupyter/datascience-notebook:latest

USER root

RUN export DEBIAN_FRONTEND=noninteractive && \
    apt-get update && \
    apt-get install --yes --no-install-recommends procps ca-certificates \
    git curl libpq-dev curl gnupg g++

USER ${NB_USER}

RUN pip install -U --no-cache-dir pip setuptools wheel pystan pystan-jupyter arviz && \
    fix-permissions "${CONDA_DIR}" && \
    fix-permissions "/home/${NB_USER}"
RUN pip install --upgrade cmdstanpy[all]
# SLOW! 2GB mem and > 10mins
RUN install_cmdstan

# TODO: tidy up the following to reduce layers; just added sequentially while working
RUN R -e "install.packages(c('dplyr', 'lubridate', 'ggplot2', 'bayesplot', 'fs', 'stringr', 'remotes', 'data.table', 'RStan', 'loo', 'rstanarm', 'rstantools', 'shinystan'), repos='https://cloud.r-project.org')"
RUN R -e "remotes::install_github('stan-dev/posterior')"
RUN R -e "remotes::install_github('stan-dev/cmdstanr')"


